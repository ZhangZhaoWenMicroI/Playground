<mujoco model="flyshot">
	<compiler angle="radian"  autolimits="true" inertiafromgeom="true" />
	<option integrator="implicitfast" noslip_iterations="0" iterations="100" gravity="0 0 0"/>
	<include file="./common/default.xml" />

    <asset>
        <!-- Textures and materials -->
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="500" height="500" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2" />
    </asset>

	<statistic center="0.3 0 0.4" extent="1.5" />

	<visual>
		<headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0" />
		<rgba haze="0.15 0.25 0.35 1" />
		<global azimuth="120" elevation="-20" offwidth="4500" offheight="3000" />
	</visual>

	<worldbody>
		<light pos="0 0 1.5" dir="0 0 -1" directional="true" castshadow="false"/>
		<geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />
	</worldbody>

	<keyframe>
		<key name="home" qpos="-1.57079633 1.57079633 -1.57079633 3.1415926 -1.57079633 1.57079633 0 " />
		<key name="p7a_home" qpos="0 0 0 0 0 0 0" />
		<key name="zero_pos" qpos="0 0 0 0 0 0 0" />
	</keyframe>
</mujoco>
